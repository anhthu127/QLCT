<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="200dp">
<TextView
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:text="Bạn có muốn đặt lại dữ liệu?"
    android:gravity="center"
    android:textColor="#000000"
    android:textSize="11pt"

    ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >
    <ImageView
        android:id="@+id/img_yes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/yes"
        ></ImageView>
        <View
            android:layout_width="100dp"
            android:layout_height="100dp"></View>
    <ImageView
        android:id="@+id/img_no"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/no"
        ></ImageView>
</LinearLayout></LinearLayout>