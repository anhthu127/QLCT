<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
 android:orientation="vertical"
    android:background="#00FF2222"
    android:layout_height="105dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@drawable/cardview_boder"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/id_img"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/dollar"
        android:foregroundGravity="center"></ImageView>

    <TextView
        android:id="@+id/id_tengd"
        android:layout_width="275dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/id_img"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="-1dp"
        android:gravity="center"
        android:text="Tên giao dịch"
        android:textColor="#000000"
        android:textSize="7pt"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/id_sotien"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="0dp"
        android:text="số tiền"
        android:textColor="#f22"
        android:textSize="7pt"
        android:textStyle="normal"></TextView>

    <ImageView
        android:id="@+id/img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_edit_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        ></ImageView>
<TextView
    android:id="@+id/id_dmy"
    android:layout_width="125dp"
    android:layout_height="50dp"
    android:hint="đ/mm/yyyy"
    android:gravity="center"
    android:textColor="#000000"
    android:textSize="7pt"
    android:textStyle="italic"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    ></TextView></RelativeLayout>
    <TextView
        android:id="@+id/txtView"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        ></TextView>
</LinearLayout>
