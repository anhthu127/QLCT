<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"
    android:id="@+id/home_fragment"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnList"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnCreate"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/success_button"
        android:text="Danh Sách giao dịch"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnCreate"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnThongKe"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/success_button"
        android:text="Thêm Giao Dịch"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnThongKe"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btnIntro"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="65dp"
        android:background="@drawable/success_button"
        android:text="Thống Kê"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnIntro"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/success_button"
        android:text="Giới thiệu"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>
