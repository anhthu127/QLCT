<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@color/successColor"
        android:gravity="center"
        android:text="Thông tin chi tiết"
        android:textColor="#000000"
        android:textSize="7pt"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTenGiaoDich"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="Tên"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtTenGd"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="tên giao dịch..."
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="7pt"

            ></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtloaigd"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="Phân loại"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtLoaigf"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="Loại giao dịch..."
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="7pt"

            ></EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtMota"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"

            android:text="Chi tiết"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtMota"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="mô tả chi tiết..."
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="7pt"

            ></EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSoTien"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"

            android:text="Số tiền"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtSoTien"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="số tiền..."
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="7pt"

            ></EditText>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtLoaiVi"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="Loại ví"
            android:textColor="#000000"
            android:textSize="7pt"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/edtLoaiVi"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:hint="loai vi..."
            android:paddingLeft="10dp"
            android:textColor="#000000"
            android:textSize="7pt"

            ></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/id_btn_Capnhat"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/success_button"
            android:gravity="center"
            android:text="Cập nhật"></Button>

        <Button
            android:id="@+id/id_btn_thoat"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/success_button"
            android:gravity="center"
            android:text="Thoát"></Button>
    </LinearLayout>
</LinearLayout>